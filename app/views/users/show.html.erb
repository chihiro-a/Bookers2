<!--ユーザ詳細画面-->
<!--部分テンプレート-->

<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'layouts/users_info', {book:@book , user:@user} %>
    </div>
    <div class="col-lg-8 offset-md-1">
        <h1>Books</h1>
        <table width=100%>
            <tr>
                <th>Title</th>
                <th>Opinion</th>
            </tr>
            <tr>
                <% @books.each do |book| %>
                <th><%= link_to book.title, book_path(book.id) %></th>
                <th><%= book.body %></th>
            </tr>
            <% end %>
        </table>

    </div>
  </div>
</div>