<!--部分テンプレート-->

<!--あとで部分テンプレートする↓ログインしている人専用-->

        <h2>User info</h2>
        <div>
        <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "NoImage.jpg" %>
        </div>
        <!--NoImageは.jpegだけど.jpg-と記述するっぽい…-->
        <table width=100%>
            <tr>
                <th>name</th>
                <th><%= user.name %></th>
            </tr>
            <tr>
                <th>introduction</th>
                <th><%= user.introduction %></th>
            </tr>
        </table>


        <a class="btn btn-lg btn-block btn-info" href="/users/<%= current_user.id %>/edit "><span><i class="fas fa-user-cog"></i></span></a>
        <!--編集はログインしているユーザの編集ページのみアクセス-->

        <!--新規投稿フォームテンプレート-->
        <h1>New book</h1>
        <%= form_with model: book, local:true do |f| %>
        <!--@bookをbookに変更-->
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_field :body %>
        <div><%= f.submit 'Create Book',class:"btn btn-lg btn-block btn-info mt-4" %></div>
        <% end %>