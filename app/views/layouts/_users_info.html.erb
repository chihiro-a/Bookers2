<!--部分テンプレート-->

<!--あとで部分テンプレートする↓ログインしている人専用-->

        <h2>User info</h2>
        <div>
        <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "NoImage.jpg" %>
        </div>
        <!--NoImageは.jpegだけど.jpg-と記述するっぽい…-->
        <table width=100%>
            <tr class="m-1">
                <th>name</th>
                <th><%= user.name %></th>
            </tr>
            <tr>
                <th>introduction</th>
                <th><%= user.introduction %></th>
            </tr>
        </table>
        
        <div class="row">
            <%= link_to edit_user_path(user.id) ,class:"btn btn-outline-secondary btn-block mt-5", method: :get do %>
            <i class="fas fa-user-cog"></i>
            <% end %>
            <!--編集はログインしているユーザの編集ページのみアクセス可能-->
        </div>
        
        <!--新規投稿フォームテンプレート-->
        <h2 class="mt-3">New book</h2>
        <%= form_with model: book, local:true do |f| %>
        <!--@bookをbookに変更-->
        <div class="form-group">
            <label for="book_title">Title</label>
            <div>
                <%= f.text_field :title, class:"form-control" %>
                <!--class:"form-control"を指定しないと送信したデータが反映されない-->
            </div>
        </div>
        <div class="form-group">
            <label for="book_body">Opinion</label>
            <div>
                <%= f.text_area :body, class:"form-control" %>
                <!--class:"form-control"を指定しないと送信したデータが反映されない-->
            </div>
        </div>
        
 
        <div><%= f.submit 'Create Book',class:"btn btn-success mt-2" %></div>
        <% end %>